<Window x:Class="StudentManagement.Dialogs.AddStudentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:StudentManagement.ViewModels"
        mc:Ignorable="d"
        Title="AddStudentDialog"
        SizeToContent="WidthAndHeight">
    <Window.DataContext>
        <viewModels:AddStudentDialogViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Margin="10">
            <StackPanel>
                <TextBlock Text="First Name"
                     FontSize="15"/>
                <TextBox x:Name="txtFirstName" 
                   Width="300"
                   Height="25"                   
                   HorizontalAlignment="Left"
                   Text="{Binding Student.FirstName}"
                   VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,0">
                <TextBlock Text="Last Name"
                     FontSize="15"/>
                <TextBox x:Name="txtLastName" 
                           Width="300"
                           Height="25"                   
                           HorizontalAlignment="Left"
                           Text="{Binding Student.LastName}"
                           VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,0">
                <TextBlock Text="Date Of Birth"
                     FontSize="15"/>
                <TextBox x:Name="txtDOB" 
                   Width="300"
                   Height="25"
                   HorizontalAlignment="Left"
                   Text="{Binding Student.DOB}"
                   VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,0">
                <TextBlock Text="Address"
                     FontSize="15"/>
                <TextBox x:Name="txtAddress" 
                    Width="300"
                    Height="130"                   
                   HorizontalAlignment="Left"
                   Text="{Binding Student.Address}"
                   VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Margin="0, 10, 0, 0" 
                  Orientation="Horizontal"
                  HorizontalAlignment="Right">

                <Button Content="Save"
                  Width="100"
                  Height="30"
                  Command="{Binding SaveCommand}"/>

                <Button Content="Cancel"
                  Width="100"
                  Height="30"
                  Margin="10,0,0,0"
                  Command="{Binding CancelCommand}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
