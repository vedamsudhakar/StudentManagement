<UserControl x:Class="StudentManagement.UserControls.StudentForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement.UserControls"
             mc:Ignorable="d" MinHeight="202" MinWidth="716">
    <Grid>
        <Grid Height="200" VerticalAlignment="Top" Margin="10,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="2">
                    <Grid Height="35" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="201*"/>
                            <ColumnDefinition Width="415*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="First Name"
                           FontSize="15"
                           VerticalAlignment="Center"/>

                        <TextBox Text=""
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Height="30"
                         FontSize="15"
                         x:Name="txtFirstName"/>

                    </Grid>

                    <Grid Height="35" Margin="0,50,0,0" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="201*"/>
                            <ColumnDefinition Width="415*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Last Name" 
                           FontSize="15"
                           VerticalAlignment="Center"/>

                        <TextBox Text=""
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         Height="30"
                         VerticalContentAlignment="Center"
                         FontSize="15"
                         x:Name="txtLastName"/>

                    </Grid>

                    <Grid Height="35" Margin="0,100,0,0" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="201*"/>
                            <ColumnDefinition Width="415*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Date of Birth" 
                           FontSize="15"
                           VerticalAlignment="Center"/>

                        <TextBox Text=""
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         Height="30"
                         VerticalContentAlignment="Center"
                         FontSize="15"
                         x:Name="txtDOB"/>

                    </Grid>

                </Grid>

                <Grid Grid.Column="1" Margin="10,2,2,2">
                    <TextBlock Text="Address" FontSize="15"/>
                    <TextBox Margin="2,25,0,2" x:Name="txtAddress" FontSize="15"/>
                </Grid>

            </Grid>

            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset" 
                    Width="100" 
                    Height="35" 
                    Margin="2"
                    x:Name="btnReset"
                    Click="btnReset_Click"/>

                    <Button Content="Save" 
                    Width="100" 
                    Height="35" 
                    Margin="2"
                    x:Name="btnSave"
                    Click="btnSave_Click"/>
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</UserControl>
